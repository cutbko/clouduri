<header class="navbar">
	<div class="navbar-inner">
		<div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            @Html.ActionLink("CLOUDY LINK","Index","About",new{}, new {@class = "brand"})
            <div class="nav-collapse">
                <ul class="nav">
                    <li class="active">
                        @Html.ActionLink("About project", "Index", "About")
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            @Html.ActionLink("Your feed", "Index", "Feed")
                        </li>
                        <li>
                            @Html.ActionLink("Manage devices", "Index", "Devices")
                        </li>
                    }
                </ul>
                @if (!User.Identity.IsAuthenticated)
                {
                    <ul class="nav pull-right">
                        <li>@Html.ActionLink("Sign up", "SignUp", "Profile")</li>
                        <li class="divider-vertical"></li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" href="#" data-toggle="dropdown">Sign In <strong class="caret"></strong></a>
                            <div class="dropdown-menu" style="padding: 15px; padding-bottom: 0px;">
                                @Html.Partial("SignInUserControl")
                            </div>
                        </li>
                    </ul>
                }
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="btn-group pull-right">
                    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="icon-user"></i>@User.Identity.Name<span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Profile", "Index", "Profile")</li>
                        <li class="divider"></li>
                        <li>@Html.ActionLink("Sign out", "SignOut", "Profile")</li>
                    </ul>
                </div>
            }
		</div>
	</div>
</header>