@model CloudUri.Web.ViewModels.DevicesViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Device</legend>
        @Html.HiddenFor(model => model.CurrentDevice.Key)
        @Html.HiddenFor(model => model.CurrentDevice.OwnerId)
        <div class="editor-label">
            @Html.LabelFor(model => model.CurrentDevice.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CurrentDevice.Name)
            @Html.ValidationMessageFor(model => model.CurrentDevice.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CurrentDevice.TypeId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CurrentDevice.TypeId)
            @Html.ValidationMessageFor(model => model.CurrentDevice.TypeId)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
